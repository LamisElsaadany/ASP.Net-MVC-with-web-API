
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/NewsDescLayout.cshtml";
}


        <button type="button" class="btn btn-lg  btn-primary" data-toggle="modal" data-target="#CreateModal" id="PostCreatebtn" >
            Create News
        </button>
        <div  id="PostSearchForm">
            @using (Ajax.BeginForm(actionName: "SearchNews", controllerName: "News", ajaxOptions: new AjaxOptions { HttpMethod = "get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "AllNewsDIV" }))
             {
        <input class="form-control" type="text" name="name" id="SearchPosttxt"  />
        <input class="btn  " type="submit" value="Search" id="SearchPostbtn"  />
               }
        </div>

            <div id="AllNewsDIV" style="margin:1%;">
                @Html.Action("GetAllNews")

            </div>
    

    @*Create new News Modal*@

    <div class="modal" id="CreateModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="position:relative;left:-700px">
                <div class="modal-header">
                    <h2 class="modal-title">Today Road News</h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="container" style="padding:30px;">
                    @Html.Action("NewNews")
                </div>
            </div>
        </div>
    </div>




